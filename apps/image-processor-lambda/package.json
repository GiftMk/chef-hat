{
	"name": "@chef-hat/image-processor-lambda",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"main": "src/index.ts",
	"scripts": {
		"local": "tsx local-runner/index.ts",
		"prebuild": "rm -rf dist",
		"build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
		"postbuild": "cd dist && zip -r index.zip index.js*"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.645.0",
		"@aws-sdk/lib-storage": "^3.645.0",
		"@chef-hat/s3": "workspace:*",
		"@chef-hat/lambda": "workspace:*",
		"@chef-hat/step-functions": "workspace:*",
		"@chef-hat/ts-result": "workspace:*",
		"adze": "^2.0.12",
		"fluent-ffmpeg": "^2.1.3"
	},
	"devDependencies": {
		"@chef-hat/local-runner-utils": "workspace:*",
		"@chef-hat/ts-config": "workspace:*",
		"@types/fluent-ffmpeg": "^2.1.26",
		"@types/uuid": "^10.0.0",
		"esbuild": "^0.23.1",
		"ora": "^8.1.0",
		"tsx": "^4.19.0",
		"typescript": "^5.5.4"
	}
}
